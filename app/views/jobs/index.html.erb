<%- model_class = Job -%>
<div class="container">
  <div class="col-lg-12">
    <div class="page-head">
      <h1><%= t('.title') %></h1>
    </div>
  </div>
  <div>
  <div class="wrapper overflow-wrapper">
    <div class="col-lg-12">
    <%= render :partial => 'table' %>

      <% if User::user_admin_content_allowed?(current_user) %>
        <div class="add-job-link">
          <%= link_to t('.new', :default => t("helpers.links.new")),
                      new_job_path,
                      :class => 'btn btn-primary btn-blue' %>
        </div>
      <% end %>
    </div>
    </div>
  </div>
</div>
