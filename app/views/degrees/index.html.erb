<div class="container">
  <div class="col-lg-12"><%- model_class = Degree -%>
    <div class="page-head">
      <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
    </div>
    <div class="wrapper">
      <table class="table table-striped">
        <thead>
          <tr>
            <th><%= model_class.human_attribute_name(:title) %></th>
            <th><%= model_class.human_attribute_name(:color) %></th>
            <th><%=t '.actions', :default => t("helpers.actions") %></th>
          </tr>
        </thead>
        <tbody>
          <% @degrees.each do |degree| %>
            <tr>
              <td><%= degree.title %></td>
              <td><div class="degree-color" style="background-color:<%= degree.color %>"></div></td>
              <td>
                <%= link_to t('.edit', :default => t("helpers.links.edit")),
                            edit_degree_path(degree), :class => 'btn btn-default btn-xs' %>
                <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                            degree_path(degree),
                            :method => :delete,
                            :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                            :class => 'btn btn-xs btn-danger' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

    <%= link_to t('.new', :default => t("helpers.links.new")),
                new_degree_path,
                :class => 'btn btn-primary' %>
    </div>
  </div>
</div>