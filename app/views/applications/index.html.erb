<%- model_class = Application -%>
<div class="container">
  <div class="col-lg-12">
    <div class="page-head">
      <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
    </div>
    <div class="wrapper">
      <table class="table table-striped">
        <thead>
          <tr>
            <th><%= model_class.human_attribute_name(:user_id) %></th>
            <th><%= model_class.human_attribute_name(:job_id) %></th>
            <th><%= model_class.human_attribute_name(:status) %></th>
            <th><%=t '.actions', :default => t("helpers.actions") %></th>
          </tr>
        </thead>
        <tbody>
          <% @applications.each do |application| %>
            <tr>
              <td><%= link_to application.user.email, user_path(application.user) %></td>
              <td><%= link_to application.job.job_title, job_path(application.job) %></td>
              <td><%= application.status %></td>
              <td>
                <%= link_to t('.edit', :default => t("helpers.links.edit")),
                            edit_application_path(application), :class => 'btn btn-default btn-xs' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <%= link_to t('.new', :default => t("helpers.links.new")),
                  new_application_path,
                  :class => 'btn btn-primary' %>
    </div>
  </div>
</div>
