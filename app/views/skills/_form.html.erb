<%= form_for([@user, @skill], :remote => true, :html => { :class => "form-horizontal skill" }) do |f| %>

  <div id="render-skill-errors"></div>

  <div class="col-lg-6 skill-input-wrapper">
    <%= f.text_field :skill, :placeholder => true, :class => 'form-control form-skill' %>
  </div>
  <div class="col-lg-6 skill-input-wrapper last-form-element">
    <div class="input-group">
      <span class="input-group-addon"><%= f.label :knowledge_percentage %></span>
      <%= f.select :knowledge_percentage, options_for_select((5..100).step(5), :selected => f.object.knowledge_percentage), :prompt => t('experiences.form.select_percentage'), :class => 'form-control form-skill' %>
    </div>
  </div>

  <div class="skill-button-group">
    <div class="col-lg-12 action-buttons-center">
      <%= f.submit(@skill.new_record? ? t('.create', :default => t("helpers.links.create")) : 
                                      t('.update', :default => t("helpers.links.update")), class: 'btn btn-primary btn-blue') %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                cancel_skills_path(user_id: @user.id), :class => 'btn btn-default btn-white', :remote => true %>
    </div>
  </div>

<% end %>