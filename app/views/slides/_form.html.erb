<%- model_class = Slide -%>
<%= form_for @slide, :html => { :class => "form-horizontal slide" } do |f| %>

  <% if @slide.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@slide.errors.count, "error")%> <%= t 'errors.messages.save_prohibited', :model => model_class.model_name.human.titleize %></h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @slide.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :title, :class => 'form-control', :required => true %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :subtitle, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :subtitle, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :url, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :url, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :background, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.file_field :background, :class => 'form-control' %>
    </div>
  </div>


  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit(@slide.new_record? ? t('.create', :default => t("helpers.links.create")) : 
                                      t('.update', :default => t("helpers.links.update")), class: 'btn btn-primary') %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                slides_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
