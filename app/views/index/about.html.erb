<div class="about-background header-active"></div>
<div class="container">
	<div class="col-lg-12">
		<div class="page-head">
	        <h1><%= t('.about_title') %></h1>
	        <p><%= t('.about_subtitle') %></p>
	    </div>
	   <div class="wrapper">
	   		<div class="history-about">
	   			<h5><%= t('.description_title') %></h5>
				<p>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= t('.description_content_first') %></p>

				<p>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= t('.description_content_second') %></p>

				<p>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= t('.description_content_third') %></p>	
	   		</div>
        </div>
	</div>
</div>
<div class="parallax-wrapper parallax-about">
	<div class="parallax">
		<div class="overlay-parallax"></div>
		<div class="info-parallax about-slider">
			<div class="slider-parallax">
				<h1><%= t('.mission_title') %></h1>
				<p><%= t('.mission_content') %></p>
			</div>
			<div class="slider-parallax">
				<h1><%= t('.vision_title') %></h1>
				<p><%= t('.vision_content') %></p>
			</div>
		</div>
	</div>
</div>
<div class="container">
	<div class="wrapper">
	 	<div class="header-wrapper">
			<span><%= t('.values_subtitle') %></span>
			<h2><%= t('.values_title') %></h2>
		</div>
 		<div class="tcvpb_section_content">
			<div class="tcvpb_container">
				<% @values.each do |value| %>
					<div class="values-wrapper">
						<div class="tcvpb_metro_box ">
							<div class="flipper">
								<div class="front white-background content-value">
									<%= image_tag value.image(:normal) %>
									<div class="overlay-values"></div>
									<div class="title-value">
										<h1><%= value.title %></h1>
									</div>
									<i class="fa fa-hand-pointer-o" aria-hidden="true"></i>
								</div>
								<div class="back">
									<div class="content-back">
										<h3><%= value.title %></h3>
										<p><%= value.description%></p>
									</div>
								</div>
							</div>
						</div>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</div>